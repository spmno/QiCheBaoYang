<div class="container">


  <%= form_for(resource, as: resource_name, html: { class: 'form-signin', role: 'form'}, url: session_path(resource_name)) do |f| %>
      <h2 class="form-signin-heading"><%= t"log_in" %></h2>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t("activerecord.attributes.user.email") %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t("activerecord.attributes.user.password") %>

      <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit t("log_in"),  class: "btn btn-lg btn-primary btn-block" %></div>
      <%= render "devise/shared/links" %>
  <% end %>



</div>
