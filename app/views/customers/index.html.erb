
<section id="content">
  <div class="container">
    <div class="row">
      <h1><%= t("list_customer") %></h1>

      <table class="table-bordered">
        <thead>
        <tr>
          <th><%= t("activerecord.attributes.customer.user") %></th>
          <th><%= t("activerecord.attributes.customer.account") %></th>
          <th><%= t("activerecord.attributes.customer.user_point") %></th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.user.name %></td>
              <td><%= customer.amount %></td>
              <td><%= customer.user_point %></td>
              <td><%= link_to 'Show', customer %></td>
              <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
              <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</section>

<%= link_to t("new_customer"), new_customer_path %>
